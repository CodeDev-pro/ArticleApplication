<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <action
        android:id="@+id/global_action"
        app:destination="@+id/articlesFragment"/>

    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.main.notificationapp.ui.fragments.ArticlesFragment"
        android:label="Article"
        tools:layout="@layout/fragment_top_headlines" >
        <argument
            android:name="article"
            app:argType="com.main.notificationapp.models.Article"
            android:defaultValue="@null"
            app:nullable="true" />
        <argument
            android:name="source"
            app:argType="com.main.notificationapp.models.SourceX"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>
    <fragment
        android:id="@+id/offlineNewsFragment"
        android:name="com.main.notificationapp.ui.fragments.OfflineNewsFragment"
        android:label="Offline Articles" >
        <argument
            android:name="article"
            app:argType="com.main.notificationapp.models.Article" />
    </fragment>
    <fragment
        android:id="@+id/topHeadlinesFragment"
        android:name="com.main.notificationapp.ui.fragments.TopHeadlinesFragment"
        android:label="Top Headlines" >
        <action
            android:id="@+id/action_topHeadlinesFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
        <argument
            android:name="country"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/savedNewsFragment"
        android:name="com.main.notificationapp.ui.fragments.SavedNewsFragment"
        android:label="Saved Articles"
        tools:layout="@layout/fragment_saved_news" >
        <action
            android:id="@+id/action_savedNewsFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
        <action
            android:id="@+id/action_savedNewsFragment_to_offlineNewsFragment"
            app:destination="@id/offlineNewsFragment" />
    </fragment>
    <fragment
        android:id="@+id/sourcesFragment"
        android:name="com.main.notificationapp.ui.fragments.SourcesFragment"
        android:label="Sources"
        tools:layout="@layout/fragment_sources" >
        <action
            android:id="@+id/action_sourcesFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.main.notificationapp.ui.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_topHeadlinesFragment"
            app:destination="@id/topHeadlinesFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchNewsFragment"
        android:name="com.main.notificationapp.ui.fragments.SearchNewsFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search_news" >
        <action
            android:id="@+id/action_searchNewsFragment_to_articlesFragment"
            app:destination="@id/articlesFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.main.notificationapp.ui.activities.MainActivity"
        android:label="MainActivity" />
</navigation>